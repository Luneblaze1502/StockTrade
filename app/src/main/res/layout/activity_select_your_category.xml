<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/_5sdp"
    android:orientation="vertical"
    tools:context=".App.activities.SelectYourCategoryActivity">


    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_5sdp"
        android:fontFamily="@font/abhaya_libre"
        android:text="Select Your Favorite Category"
        android:textColor="@color/black"
        android:textSize="@dimen/_15sdp" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_category"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/tv_category_next"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:spanCount="2" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_category_next"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_alignParentBottom="true"
            android:layout_margin="@dimen/_2sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:background="@color/colorPrimaryDark"
            android:drawableRight="@drawable/ic_menu_arrow"
            android:drawableTint="@color/white"
            android:fontFamily="@font/abhaya_libre"
            android:gravity="center"
            android:padding="@dimen/_3sdp"
            android:text="Next"
            android:textColor="@color/white"
            android:textSize="@dimen/_17sdp"
            app:textAllCaps="true" />

    </RelativeLayout>

</androidx.appcompat.widget.LinearLayoutCompat>