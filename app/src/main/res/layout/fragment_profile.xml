<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            android:id="@+id/bar"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_gravity="center"
            android:visibility="gone" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/_12sdp"
                tools:context=".App.fragments.ProfileFragment">


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_15sdp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="@dimen/_7sdp"
                    app:cardElevation="@dimen/_3sdp">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/_10sdp">


                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center">


                            <com.github.lzyzsd.circleprogress.ArcProgress
                                android:id="@+id/arc_progress"
                                android:layout_width="@dimen/_90sdp"
                                android:layout_height="@dimen/_90sdp"
                                android:layout_gravity="center"
                                android:background="@color/white"
                                app:arc_text_color="@color/theme_2_color2"
                                app:arc_finished_color="@color/themecolor"
                                app:arc_unfinished_color="@color/theme_2_color" />

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/civ_dp"
                                android:layout_width="@dimen/_60sdp"
                                android:layout_height="@dimen/_60sdp"
                                android:layout_gravity="center"
                                android:background="@color/white"
                                android:src="@drawable/ic_person" />


                        </FrameLayout>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_margin="@dimen/_5sdp"
                            android:fontFamily="@font/abhaya_libre"
                            android:gravity="center"
                            android:text="Shyam parmar"
                            android:textColor="@color/themecolor"
                            android:textSize="@dimen/_15sdp"
                            android:textStyle="bold" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_change_picture"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:background="@drawable/bg_btn"
                            android:drawableRight="@drawable/ic_menu_camera"
                            android:drawableTint="@color/white"
                            android:fontFamily="@font/abhaya_libre"
                            android:gravity="center"
                            android:padding="@dimen/_7sdp"
                            android:text="Edit Picture"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_12sdp" />

                    </androidx.appcompat.widget.LinearLayoutCompat>


                </androidx.cardview.widget.CardView>


                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_margin="@dimen/_3sdp"
                            android:fontFamily="@font/abhaya_libre"
                            android:text="Basic Details"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_18sdp"
                            android:textStyle="bold" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/edit"
                            android:layout_width="@dimen/_24sdp"
                            android:layout_height="@dimen/_24sdp"
                            android:layout_gravity="right"
                            android:src="@drawable/edit_profile" />
                    </FrameLayout>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="@dimen/_3sdp"
                        android:fontFamily="@font/abhaya_libre"
                        android:text="Fill the details to help us you know better"
                        android:textColor="@color/theme_2_color"
                        android:textSize="@dimen/_13sdp" />


                    <ss.anoop.awesometextinputlayout.AwesomeTextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_7sdp"
                        android:padding="@dimen/_8sdp"
                        android:visibility="gone"
                        app:borderColor="@color/graycolor2"
                        app:borderWidth="1dp"
                        app:cornerRadius="@dimen/_7sdp">

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/et_firstname"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="First Name"
                            android:textColor="@color/black"
                            android:textColorHint="@color/graycolor2"

                            />

                    </ss.anoop.awesometextinputlayout.AwesomeTextInputLayout>


                    <ss.anoop.awesometextinputlayout.AwesomeTextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_7sdp"
                        android:padding="@dimen/_8sdp"
                        android:visibility="gone"
                        app:borderColor="@color/graycolor2"
                        app:borderWidth="1dp"
                        app:cornerRadius="@dimen/_7sdp">

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/et_lastname"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Client i'd"
                            android:textColor="@color/black"
                            android:textColorHint="@color/graycolor2"

                            />

                    </ss.anoop.awesometextinputlayout.AwesomeTextInputLayout>

                    <ss.anoop.awesometextinputlayout.AwesomeTextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_7sdp"
                        android:padding="@dimen/_8sdp"
                        app:borderColor="@color/graycolor2"
                        app:borderWidth="1dp"
                        app:cornerRadius="@dimen/_7sdp">

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/et_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clickable="false"
                            android:focusable="false"
                            android:hint="Email"
                            android:textColor="@color/black"
                            android:textColorHint="@color/graycolor2" />

                    </ss.anoop.awesometextinputlayout.AwesomeTextInputLayout>

                    <ss.anoop.awesometextinputlayout.AwesomeTextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_7sdp"
                        android:padding="@dimen/_8sdp"
                        app:borderColor="@color/graycolor2"
                        app:borderWidth="1dp"
                        app:cornerRadius="@dimen/_7sdp">

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/et_mobile"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Mobile Number"
                            android:textColor="@color/black"
                            android:textColorHint="@color/graycolor2"

                            />

                    </ss.anoop.awesometextinputlayout.AwesomeTextInputLayout>

                    <ss.anoop.awesometextinputlayout.AwesomeTextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_7sdp"
                        android:padding="@dimen/_8sdp"
                        app:borderColor="@color/graycolor2"
                        app:borderWidth="1dp"
                        app:cornerRadius="@dimen/_7sdp">

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/et_dob"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:editable="false"
                            android:hint="Date Of Birth"
                            android:textColor="@color/black"
                            android:textColorHint="@color/graycolor2" />

                    </ss.anoop.awesometextinputlayout.AwesomeTextInputLayout>


                    <com.savvyapps.togglebuttonlayout.ToggleButtonLayout
                        android:id="@+id/toggle_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/_10sdp"
                        app:allowDeselection="false"
                        app:dividerColor="@android:color/darker_gray"
                        app:menu="@menu/toggle_gender"
                        app:multipleSelection="false"
                        app:selectedColor="@color/theme_2_color"
                        app:toggleMode="even" />


                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@drawable/bg_payment"
                        android:orientation="vertical"
                        android:padding="@dimen/_13sdp">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_payment_details"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableRight="@drawable/ic_arrow_down_40"
                            android:fontFamily="@font/abhaya_libre"
                            android:gravity="center_vertical"

                            android:text="Add/Modify Payment Details"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_15sdp" />

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="0.8dp"
                            android:background="@color/graycolor2" />


                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">


                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tv_bank_details"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawableLeft="@drawable/ic_bank"
                                android:drawableRight="@drawable/ic_arrow_40"
                                android:fontFamily="@font/abhaya_libre"
                                android:gravity="center_vertical"
                                android:text="@string/bankdetails"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_15sdp" />

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="0.8dp"
                                android:background="@color/graycolor2" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tv_paytm_details"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawableLeft="@drawable/ic_paytm"
                                android:drawableRight="@drawable/ic_arrow_40"
                                android:fontFamily="@font/abhaya_libre"
                                android:gravity="center_vertical"
                                android:text="@string/paytmdetails"
                                android:textColor="@color/black"

                                android:textSize="@dimen/_15sdp" />

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="0.8dp"
                                android:background="@color/graycolor2" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tv_upi_details"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawableLeft="@drawable/ic_upi"
                                android:drawableRight="@drawable/ic_arrow_40"
                                android:fontFamily="@font/abhaya_libre"
                                android:gravity="center_vertical"
                                android:text="@string/upidetails"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_15sdp" />

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="0.8dp"
                                android:background="@color/graycolor2" />


                        </androidx.appcompat.widget.LinearLayoutCompat>

                    </androidx.appcompat.widget.LinearLayoutCompat>


                </androidx.appcompat.widget.LinearLayoutCompat>


            </androidx.appcompat.widget.LinearLayoutCompat>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_150sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@color/graycolor3"
                android:visibility="gone">


                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/abhaya_libre"
                    android:text="@string/slogen"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_22sdp" />

            </FrameLayout>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </FrameLayout>


</androidx.core.widget.NestedScrollView>

